@using Allard.Configinator.Blazor.Client.Services
@using Allard.Configinator.Core.Model
@inject IOrganizationService service;
@inject IEventBus bus;

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Allard.Configinator.Blazor</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="oi oi-plus" aria-hidden="true"></span> Counter
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
            </NavLink>
        </li>
    </ul>
</div>

<div class="top-row pl-4 navbar navbar-dark">
    <span class="navbar-brand" href="">Organizations</span>
    <a href="/createorganization">
        <span class="oi oi-plus"></span>
    </a>
</div>
<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        @if (organizationIds != null)
        {
            foreach (var o in organizationIds.OrderBy(o => o.Id))
            {
                var href = "organization/" + o.Id;

                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="@href">
                        <span class="oi oi-globe" aria-hidden="true"></span>&nbsp;@o.Id
                    </NavLink>
                </li>
            }
        }
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private List<OrganizationId> organizationIds;

    protected override Task OnInitializedAsync()
    {
        bus.Subscribe(e => e is OrganizationCreatedClientEvent, async _ => await InvokeAsync(Load));
        return Load();
    }

    private async Task Load()
    {
        organizationIds = (await service.GetOrganizationsAsync()).ToList();
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}